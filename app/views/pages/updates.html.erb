<% content_for :title, "Get Updates" %>

<section class="mx-auto px-5 sm:px-0 max-w-xl my-12">
  <h1 class="text-3xl text-balance font-serif font-medium text-stone-800">
    Hyperbulletin Updates
  </h1>
  <p class="mt-3 text-stone-600 text-balance">
    A newsletter with all things new with Hyperbulletin â€” new features, improvements, and announcements.
  </p>

  <div class="mt-8 bg-white rounded-xl shadow-with-inset p-6">
    <%= form_with url: subscribe_path(slug: "updates"), method: :post, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :email, "Email address", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= f.email_field :email, placeholder: "you@example.com", required: true,
          class: "w-full px-3 py-2 border border-stone-200 rounded-lg text-sm placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-stone-900 focus:border-transparent bg-stone-50" %>
      </div>
      <div>
        <%= f.label :name, "Full name", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= f.text_field :name, placeholder: "Your name",
          class: "w-full px-3 py-2 border border-stone-200 rounded-lg text-sm placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-stone-900 focus:border-transparent bg-stone-50" %>
      </div>
      <%= f.submit "Subscribe",
        class: "bg-gradient-to-t from-stone-900 outline outline-1 outline-stone-600 to-stone-700 text-sm shadow-sm px-6 py-2 text-white rounded-xl cursor-pointer w-full" %>
    <% end %>
  </div>

  <p class="mt-4 text-xs text-stone-500 text-center">
    This newsletter is managed by Hyperbulletin. No spam, unsubscribe at any time.
  </p>
</section>
